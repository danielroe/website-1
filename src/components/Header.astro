---
import Logo from "./Logo.astro";
const { isPost } = Astro.props;
const isSelected = (assertion) => {
  if (assertion) {
    return "selected";
  }
  return "";
};

const url = Astro.url;
const { pathname } = url;
---

<header class="nav wrap center">
  <a class="logo" href="/">
    <Logo />
  </a>
  <div class="flex gap-2 center">
    <ul class="menu">
      <li class={isSelected(pathname === "/about")}>
        <a href="/about"><span>About</span></a>
      </li>
      <li class={isSelected(pathname === "/posts" || isPost)}>
        <a href="/posts"><span>Blog</span></a>
      </li>
      <li class={isSelected(pathname === "/projects")}>
        <a href="/projects"><span>Projects</span></a>
      </li>
      <li class={isSelected(pathname === "/talks")}>
        <a href="/talks"><span>Speaking</span></a>
      </li>
    </ul>
  </div>
</header>
