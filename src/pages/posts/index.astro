---
import { getPosts, getPagination, getSortedPosts } from "../../lib/posts";
import Posts from "@/components/Posts.astro";
const posts = await getPosts();
const sortedPosts = getSortedPosts(posts);

const pagination = getPagination({
  posts: sortedPosts,
  page: 1,
  isIndex: true,
});
---

<Posts {...pagination} />
